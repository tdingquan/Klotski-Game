<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unit.huarongdao">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name="com.unit.huarongdao.GameRuleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.unit.huarongdao.DifficultySelectionActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.unit.huarongdao.RecordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.unit.huarongdao.MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.unit.huarongdao.PlayGameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>